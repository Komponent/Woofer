<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :name,:size=>30,:aria_required=>true,:placeholder=>"Nombre"%>
    <%= f.text_field :surname,:size=>30,:aria_required=>true,:placeholder=>"Apellidos" %>
  </div>
  <div class="field">
    <%= f.email_field :email,:size=>66,:aria_required=>true,:placeholder=>"Tu correo electrónico" %>
  </div>
   <div class="field">
      <%= f.email_field :email_confirmation, :size=>66,:aria_required=>true,:placeholder=>"Repite tu correo electrónico" %>
    </div>
  <div class="field">
    <%= f.password_field :password,:size=>66,:aria_required=>true,:placeholder=>"Introduce la contraseña" %>
  </div>
  <div class="field">
    <%= f.date_select :dateofbirth ,:start_year=>Time.now.year,:end_year=>1900,:use_month_names=>%w(Enero Febrero Marzo Abril Mayo Junio Julio Agosto Septiembre Octubre Noviembre Diciembre),:prompt=>{:year=>"Año",:month=>"Mes",:day=>"Día"}%>
  </div>
  <div class="field">
    <%= f.label :Hombre %>
    <%= f.radio_button :gender,"Hombre",:checked=>'checked',:value=>1%>
    <%= f.label :Mujer %>
    <%= f.radio_button :gender,"Mujer",:value=>0%>
  </div>
  <div class="actions">
    <%= f.submit "Regístrate",class:"btn btn-large btn-primary" %>
  </div>
<% end %>
